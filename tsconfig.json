{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ES5", "DOM"],
        // this project is bundled with webpack, for which
        // webpack docs and programming literature suggests 
        // setting module to 'ES2015'
        "module": "ES2015",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        },
    "include": [
        "./src/",
    ],
    "exclude": ["build-utils"]
}